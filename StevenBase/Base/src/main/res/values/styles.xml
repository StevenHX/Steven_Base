<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 选择的底线颜色 -->
        <item name="colorControlActivated">@color/base</item>
        <!-- Label标签的颜色 -->
        <item name="colorAccent">@color/base</item>
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
    </style>
    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_to_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_left_to_right</item>
    </style>

    <style name="MultipleStatusViewContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>