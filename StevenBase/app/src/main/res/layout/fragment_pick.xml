<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ExamplePage.pick.PickFragment">


    <Button
        android:id="@+id/btn_option_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="条件选择"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_time_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="时间选择"
        app:layout_constraintEnd_toEndOf="@+id/btn_option_select"
        app:layout_constraintStart_toStartOf="@+id/btn_option_select"
        app:layout_constraintTop_toBottomOf="@+id/btn_option_select" />
</androidx.constraintlayout.widget.ConstraintLayout>